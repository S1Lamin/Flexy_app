# Environment Variables for Virtual Try-On App
# Copy this file to .env.local for local development
# Copy to .env.production for production deployment

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Virtual Try-On Platform
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration (for future backend integration)
DATABASE_URL=postgresql://username:password@localhost:5432/virtual_tryon
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=virtual_tryon
DATABASE_USER=username
DATABASE_PASSWORD=password

# API Configuration
API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Authentication (for future implementation)
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# External Services (for future integration)
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# PWA Configuration
NEXT_PUBLIC_PWA_NAME=Virtual Try-On
NEXT_PUBLIC_PWA_SHORT_NAME=TryOn
NEXT_PUBLIC_PWA_DESCRIPTION=Virtual Try-On Platform for Fashion

# Performance and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=
SENTRY_DSN=

# Development Tools
DEBUG=false
VERBOSE_LOGGING=false
